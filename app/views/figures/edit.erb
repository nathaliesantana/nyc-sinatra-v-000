<h2>Edit Figure</h2>

<form action="/figures/<%= @figure.id %>" method="POST">
  <input type="hidden" name="_method" value="PATCH">

  <lable>Name</label>
  <input type="text" id="figure_name" name="figure[name]" value="<%=@figure.name%>"><br>


    <h4>Titles</h4>
      <% Title.all.each do |title| %>
        <label><%= title.name %></label>
        <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title) %>>
      <% end %>

   <h4>Add New Title:</h4>
    <input type="text" id="new_title" name="title[name]">


    <h4>Landmarks</h4>
      <% Landmark.all.each do |landmark| %>
        <label><%= landmark.name %></label>
        <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%= landmark.id %>"><br>
      <% end %>

      <h4>New Landmark:</h4>
      <label>New Name:</label>
       <input type="text" id="new_landmark" name="landmark[name]" >



  <br>
  <input type="submit" value="Edit Figure">
</form>
